/* pages/component/sqw/wltw/wltw.wxss */
@import '../../../common/common.wxss';
page{
  background: #f0efef;
}
.fl{
  float:left;
}
.fr{
  float:right;
}
.clearfix::after {/***加在元素父级清除浮动*****/
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.h25{
  height: 25rpx;
}
.wltw .tw textarea{
  width: 750rpx;
  height: 420rpx;
  background: #fff;
  padding: 35rpx 25rpx;
  font-size: 30rpx;
  color: #dfdfdf;
}
.wltw .choosePic{
  width: 750rpx;
  height: 195rpx;
  background: #ffffff;
  padding: 35rpx 0;
}
.wltw .choosePic .img{
  width: 120rpx;
  height: 120rpx;
  margin-left: 25rpx;
}
.wltw .choosePic .img image{
  width: 120rpx;
  height: 120rpx;
}
.wltw .choosePic .wimg{
  max-width: 600rpx;
  height: 120rpx;
  overflow: hidden;
}
.wltw .choosePic .wimg view-item{
  display: block;
  width: 120rpx;
  height: 120rpx;
  float: left;
  margin-left: 10rpx;
}
.wltw .choosePic .wimg image{
  width: 120rpx;
  height: 120rpx;
  display: block;
}
.wltw .tj{
  width: 720rpx;
  margin: 0 15rpx;
  position: fixed;
  bottom: 25rpx;
}
.wltw .tj button{
  width: 720rpx;
  height: 95rpx;
  background: #1b1b1b;
  padding: 0;
  margin: 0;
  line-height: 95rpx;
  display: block;
  text-align: center;
  border: 0;
  outline: 0;
  border-radius: 15rpx;
  font-size: 36rpx;
  color: #ffffff;
}